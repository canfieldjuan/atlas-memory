# Atlas Vision Service Configuration
# Copy to .env and adjust values

# Server settings
ATLAS_VISION_HOST=0.0.0.0
ATLAS_VISION_PORT=5002
ATLAS_VISION_DEBUG=false
ATLAS_VISION_LOG_LEVEL=INFO

# MQTT settings (required for atlas_brain integration)
ATLAS_VISION_MQTT_ENABLED=true
ATLAS_VISION_MQTT_HOST=localhost
ATLAS_VISION_MQTT_PORT=1883
# ATLAS_VISION_MQTT_USERNAME=
# ATLAS_VISION_MQTT_PASSWORD=

# Detection settings
ATLAS_VISION_DETECTION_ENABLED=true
ATLAS_VISION_DETECTION_MODEL=yolov8n.pt
ATLAS_VISION_DETECTION_CONFIDENCE_THRESHOLD=0.5
ATLAS_VISION_DETECTION_DEVICE=auto
ATLAS_VISION_DETECTION_FPS=10.0

# Discovery settings (mDNS announcement)
ATLAS_VISION_DISCOVERY_ENABLED=true
ATLAS_VISION_DISCOVERY_NODE_NAME=atlas-vision

# Database settings (for person recognition)
ATLAS_VISION_DB_ENABLED=true
ATLAS_VISION_DB_HOST=localhost
ATLAS_VISION_DB_PORT=5432
ATLAS_VISION_DB_DATABASE=atlas
ATLAS_VISION_DB_USER=atlas
# ATLAS_VISION_DB_PASSWORD=

# Recognition settings
ATLAS_VISION_RECOGNITION_ENABLED=true
ATLAS_VISION_RECOGNITION_FACE_THRESHOLD=0.6
ATLAS_VISION_RECOGNITION_GAIT_THRESHOLD=0.5
ATLAS_VISION_RECOGNITION_AUTO_ENROLL_UNKNOWN=true
